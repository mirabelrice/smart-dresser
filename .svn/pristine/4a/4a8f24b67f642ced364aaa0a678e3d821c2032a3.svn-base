<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fancy_home_screen"
    android:orientation="vertical" >

    <!-- Add Item -->

    <!-- View Item -->

    <Button
        android:id="@+id/view_item_button"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/add_item_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/drawer_btn"
        android:text="closet"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <!-- Create Outfit -->

    <Button
        android:id="@+id/create_outfit_button"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/view_item_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/drawer_btn"
        android:text="create outfit"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <!-- View History -->

    <Button
        android:id="@+id/view_history_button"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/create_outfit_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/drawer_btn"
        android:text="history"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <!-- Favorites -->

    <Button
        android:id="@+id/favorite_class_button"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/view_history_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/drawer_btn"
        android:text="favorites"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_item_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:text="smart"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/add_item_button"
        android:text="dresser"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/view_item_button"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"
        android:background="@drawable/drawer_btn"
        android:text="add item"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>