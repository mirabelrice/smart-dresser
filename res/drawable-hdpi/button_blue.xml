<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <gradient  android:angle="-90"  android:startColor="#FDEEF4" android:endColor="#FDEEF4"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <solid  android:color="#FDEEF4"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius="3dp"
       				android:bottomLeftRadius="3dp" 
        			android:topLeftRadius="3dp"
        			android:topRightRadius="3dp"
       		 />
             <gradient  android:angle="-90"  android:startColor= "#fd7f7a" android:endColor="#fd6a6a" />            
         </shape>
     </item>
</selector>