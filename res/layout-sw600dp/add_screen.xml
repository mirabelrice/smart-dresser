<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#466b79"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_style"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/menu_addItem_button"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/menu_icon" />

        <TextView
            android:id="@+id/add_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:paddingLeft="70dp"
            android:paddingTop="5dp"
            android:text="add item"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/take_picture"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@layout/image_border"
        android:scaleType="fitCenter"
        android:src="@drawable/camera_icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/type_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="type:"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:entries="@array/type_array" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/color_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="color:"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/color_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:entries="@array/color_array" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/length_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="length:"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/length_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:entries="@array/color_array" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/save_item_button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:background="@drawable/button_blue"
            android:text="save"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:typeface="sans" />

    </RelativeLayout>

</LinearLayout>